// ヘッダー
= render "items/header";

// クレジットカード情報入力
.Creditcard
  %section.Creditcard__main
    %h2.Creditcard__main__box__header クレジットカード情報入力
    .Creditcard__main__box__form
      = form_with url: creditcards_path, method: :post, local: true, name: "inputForm", id: "card_form" do
        .Creditcard__main__box__form__menu
          %p.Creditcard__main__box__form__menu--quantity カード番号
          %span.Creditcard__main__box__form__menu--mandatory 必須
        = text_field_tag "number", "", class: "Creditcard__box__form__menu__number", placeholder: "半角数字のみ", maxlength: "16", id: "card_number"
        // カード会社のロゴをいれる
        .Creditcard__main__box__form__images
          -# = image_tag '0.5x/visa.jpg', class: 'credit-card-image'
          -# = image_tag '0.5x/maru.jpg', class: 'credit-card-image'
          -# = image_tag '0.5x/jcb.jpg', class: 'credit-card-image'
          -# = image_tag '0.5x/diners.jpg', class: 'credit-card-image'
          -# = image_tag '0.5x/discover.jpg', class: 'credit-card-image'
        .Creditcard__main__box__form__menu
          %p.Creditcard__box__form__menu--quantity 有効期限
          %span.Creditcard__box__form__menu--mandatory 必須
        .Select__field
          .Select__field__month
            %select.Select__field__month__default#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %p.Select__field__month__display 月

          .Select__field__year
            %select.Select__field__year__default#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
              %option{value: "2030"}30
            %p.Select__field__year__display 年
        .Creditcard__main__box__form__menu
          %p.Creditcard__main__box__form__menu--quantity セキュリティーコード
          %span.Creditcard__main__box__form__menu--mandatory 必須
        = text_field_tag "cvc", "", class: "Creditcard__main__box__form__menu__cvc", placeholder: "カード背面4桁もしくは3桁の番号", id: "cvc", maxlength: "4"
        #card_token
        = submit_tag "追加する", class: "Creditcard__main__box__form__menu__submitbtn", id: "token_submit"



// フッター 
= render "items/footer";